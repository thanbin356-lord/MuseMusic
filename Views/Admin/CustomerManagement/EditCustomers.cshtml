@{
  Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model MuseMusic.Models.ManagerModels.OrderViewModel
<main class="user-info-main">
  <div class="go-back">
    <a href="/admin/categories"><i class="fa-solid fa-chevron-left"></i> quản lí khách hàng</a>
  </div>
  <div class="user-info">

    <div class="profile">
      <img src="/image/user.png" alt="Profile Picture" class="profile-picture">
      <button class="delete-button">Xóa thông tin</button>
    </div>
    <div class="details">
      <div class="form">
        <div class="form-group">
          <label for="username">Tên tài khoản</label>
          <input type="text" id="username" value="@Model.SelectedCustomerOrders.CustomerName" readonly>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" value="@Model.SelectedCustomerOrders.Email" readonly>
        </div>

        <div class="form-group-1">
          <div class="form-group">
            <label>Giới tính</label>
            <input type="text" value="Nam" readonly>
          </div>
          <div class="form-group">
            <label>Quốc tịch</label>
            <input type="text" value="Việt Nam" readonly>
          </div>
          <div class="form-group">
            <label>Ngày sinh</label>
            <input type="text" value="DD/MM/YY" readonly>
          </div>
        </div>

        <div class="form-group-2">
          <div class="form-group-2-left">
            <div class="form-group">
              <label for="address">Địa chỉ</label>
              <input type="text" id="address" value="@Model.SelectedCustomerOrders.Address" readonly>
            </div>
          </div>

          <div class="form-group-2-right">
            <div class="form-group">
              <label for="phone">Số điện thoại</label>
              <input type="text" id="phone" value="@Model.SelectedCustomerOrders.Phone" readonly>
            </div>
          </div>

        </div>

        <div class="User-Order-Detail">

          <div class="Order-Number">
            <p>Số lượng đơn hàng đã mua: </p>
            <p>@Model.SelectedCustomerOrders.OrderCount</p>
          </div>


        </div>

      </div>
      <table class="purchase-history">
        <thead>
          <tr>
            <th>STT</th>
            <th>Số hóa đơn</th>
            <th>Ngày tạo</th>
            <th>Tổng tiền</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          @for (int i = 0; i < Model.AllOrders.Count; i++)
          {
            var order = Model.AllOrders[i];
            <tr>
              <td>@(i + 1)</td> <!-- Display row number -->
              <td>@order.OrderId</td> <!-- Display the actual OrderId -->
              <td>@order.created_at.ToString("dd/MM/yyyy")</td> <!-- Format the date -->
              <td>@order.total.ToString("N0") đ</td> <!-- Format the total with thousand separators -->
              <td>
                <button class="butt" onclick="window.location.href='/admin/orderdetail/@order.OrderId'">...</button>
              </td>
            </tr>
          }
        </tbody>

      </table>
      <div class="total-value">
        Tổng giá trị: <span>4,999,999,995đ</span>
      </div>
    </div>
  </div>
</main>