@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model MuseMusic.Models.ManagerModels.OrderViewModel
<main class="content2">
    <h1>QUẢN LÝ ĐƠN HÀNG</h1>
    <div class="search-bar2">
        <input type="text" placeholder="Tìm kiếm..." style="margin: 10px;width: 250px;
height: 38px;border: 1px solid #000; padding: 10px; margin-left: -2px;">
    
    </div>
    <table class="table table-striped">
        <thead>
            <tr class="table-dark">
                <th>Số hóa đơn</th>
                <th style="width: 200px;">User</th>
                <th>Ngày tạo</th>
                <th style="width: 200px;">Địa chỉ</th>
                <th>Trạng thái đơn hàng</th>
                <th>Thanh toán</th>
                <th>Tổng tiền</th>
                <th></th>   
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @foreach (var item in Model.Orders)
                {
                    <tr>
                        <td>@item.OrderId</td>
                        <td>@item.CustomerName</td>
                        <td>@item.created_at</td>
                        <td>@item.Address</td>
                        <td>@item.Status</td>
                        <td>@item.PaymentMethod</td>
                        <td>@item.total</td>
                        <td>
                            <input type="checkbox">
                            <button class="butt"
                                onclick="window.location.href='/admin/orderdetail/@item.OrderId'">Edit</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div class="pagination">
        <button class="page-btn active">1</button>
        @* <button class="page-btn">2</button>
    <button class="page-btn">3</button> *@
        <span>...</span>
        @* <button class="page-btn">201</button>
    <button class="page-btn">202</button>
    <button class="page-btn">203</button> *@
        <button class="page-btn next">&gt;</button>
    </div>
    <div class="pagination2">
        <span>HIỂN THỊ:</span>
        <span class="page-item">01-12</span>
    </div>
</main>