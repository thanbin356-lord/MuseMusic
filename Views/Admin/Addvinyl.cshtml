@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<main class="disk-management">
    <h1>QUẢN LÝ ĐĨA THAN</h1>
    <div class="form-container">
      <div class="product-image">
        <div class="image-placeholder">
          <button class="add-image-btn">+ THÊM ẢNH</button>
        </div>
      </div>
      <div class="product-info">
        <div class="form-group">
          <label for="name">Tên*</label>
          <input type="text" id="name" placeholder="Nhập tên sản phẩm">
        </div>
        <div class="form-group">
          <label for="artist">Nghệ sĩ*</label>
          <input type="text" id="artist" placeholder="Nhập tên nghệ sĩ">
        </div>
        <div class="form-group">
          <label for="category">Thể loại*</label>
          <input type="text" id="category" placeholder="Nhập thể loại">
        </div>
        <div class="form-group">
          <label for="publisher">Hãng phát hành*</label>
          <input type="text" id="publisher" placeholder="Nhập hãng phát hành">
        </div>
        <div class="form-group">
          <label for="release-year">Năm phát hành*</label>
          <input type="text" id="release-year" placeholder="Nhập năm phát hành">
        </div>
        <div class="form-group">
          <label for="condition">Tình trạng đĩa*</label>
          <input type="text" id="condition" placeholder="Nhập tình trạng">
        </div>
        <div class="form-group">
          <label for="code">Mã đĩa*</label>
          <input type="text" id="code" placeholder="Nhập mã đĩa">
        </div>
        <div class="form-group">
          <label for="quantity">Số lượng đĩa*</label>
          <select id="quantity">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
          </select>
        </div>
        <div class="form-group">
          <label for="price">Giá tiền*</label>
          <input type="text" id="price" placeholder="Nhập giá tiền">
        </div>
        <div class="form-group">
          <label for="stock">Số lượng sản phẩm*</label>
          <input type="text" id="stock" placeholder="Nhập số lượng sản phẩm">
        </div>
      </div>
    </div>
    <div class="additional-info">
      <div class="form-group">
        <label for="notes">Ghi chú sản phẩm</label>
        <textarea id="notes" placeholder="Nhập ghi chú"></textarea>
      </div>
      <div class="form-group">
        <label for="track-list">Track List</label>
        <textarea id="track-list" placeholder="Nhập danh sách bài hát"></textarea>
      </div>
    </div>
    <div class="actions">
      <button class="cancel-btn">HỦY</button>
      <button class="confirm-btn">XÁC NHẬN</button>
    </div>
  </main>