@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MuseMusic.Controllers.HomeController.VinylViewModel
<main>

    <!-- Vinyl navbar -->
    <section class="section-padding">
        <div class="container">
            <div class="row align-items-center">

                <div class="vinyl-title">
                    <h1>ĐĨA THAN</h1>

                    <h1>ĐẦU ĐĨA</h1>

                    <h1>PHỤ KIỆN</h1>

                </div>


            </div>
        </div>
    </section>

    <section class="section-padding">
        <div class="container">
            <img class="vinyl-img-top" src="/images/vinyl-header.png">
        </div>
    </section>

    <!-- Filter -->
    <section class="section-padding">
        <div class="container">
            <div class="row align-items-center">
                <!-- Block Filter -->
                <div class="vinyl-filter">

                    <div class="col-lg-3 col-12">
                        <div class="single-filter">
                            <h3>J-POP</h3>
                        </div>
                    </div>

                    <div class="col-lg-3 col-12">
                        <div class="single-filter">
                            <h3>NGHỆ SĨ</h3>
                        </div>
                    </div>

                    <div class="col-lg-3 col-12">
                        <div class="single-filter">
                            <h3>THỜI KÌ</h3>
                        </div>
                    </div>

                    <div class="col-lg-3 col-12">
                        <div class="single-filter">
                            <h3>TÂM TRẠNG</h3>
                        </div>
                    </div>

                    <div class="col-lg-3 col-12">
                        <div class="single-filter">
                            <h3>HÃNG PHÁT HÀNH</h3>
                        </div>
                    </div>

                    <div class="col-lg-3 col-12">
                        <div class="single-filter">
                            <h3>NĂM PHÁT HÀNH</h3>
                        </div>
                    </div>

                    <div class="col-lg-3 col-12">
                        <div class="single-filter">
                            <h3>TÌNH TRẠNG ĐĨA</h3>
                        </div>
                    </div>

                    <div class="col-lg-3 col-12">
                        <div class="single-filter">
                            <h3>TÌNH TRẠNG KHO</h3>
                        </div>
                    </div>
                </div>

                <!-- Dropdown Filter -->
                <div class="filter-dropdown">
                    <div class="single-filter-dropdown">
                        <h4>SẮP XẾP BỞI: </h4>
                        <select class="filter-select">
                            <option value="1">THỨ TỰ MẶC ĐỊNH</option>
                            <option value="2">MOI NHAT</option>
                            <option value="3">LAU NHAT</option>
                        </select>
                    </div>
                    <div class="single-filter-dropdown">
                        <h4>HIỂN THỊ: </h4>
                        <select class="filter-select">
                            <option value="1">01 - 12</option>
                            <option value="2">12-30</option>
                            <option value="3">30-40</option>
                        </select>
                    </div>

                </div>

            </div>
    </section>

    <div class="product-container">
    <!--  Product List -->
    @foreach (var product in Model.Products)
    {
            <div class="product">
                <a href="/Home/VinylDetails?id=@product.ProductId"><img src="/images/product/product.png" alt="@product.ProductName"></a>
                <h2>@product.ProductName
                </h2>
                <p>Soken Masayoshi & Various Artists</p>
                <p class="price">@product.Price</p>
                <div class="buttons">
                    <span class="preorder">PREORDER</span>
                    <span class="size">M</span>
                </div>
            </div>       
    }
    </div>
</main>