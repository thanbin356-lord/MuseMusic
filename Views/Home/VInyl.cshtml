@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MuseMusic.Models.ViewModels.VinylViewModel

<main>
    <!-- Vinyl navbar -->
    <section class="section-padding">
        <div class="container">
            <div class="row align-items-center">
                <div class="vinyl-title">
                    <a href="#">ĐĨA THAN</a>
                    <a href="#">ĐẦU ĐĨA</a>
                    <a href="#">PHỤ KIỆN</a>
                </div>
            </div>
        </div>
    </section>

    <section class="">
        <div class="container">
            <div class="vinyl-header">
                <div class="overlay">
                    <h1>ĐĨA THAN</h1>
                    <p>Không biết lựa chọn gì? Hãy để Muse giúp bạn!<br>Khám phá thế giới âm nhạc theo:</p>
                    <nav>
                        <a href="#">THỂ LOẠI</a>
                        <a href="#">NGHỆ SĨ</a>
                        <a href="#">THỜI KÌ</a>
                        <a href="#">TÂM TRẠNG</a>
                    </nav>
                </div>
            </div>
        </div>
    </section>

    <!-- Filter -->
    <section class="section-padding">
        <div class="container">
            <div class="row align-items-center">
                <!-- Block Filter -->
                <div class="vinyl-filter">
                    <div class="col-lg-3 col-12">
                        <div class="single-filter">
                            <h3>THỂ LOẠI</h3>
                            <select id="category" class="js-example-basic-multiple-limit" multiple="multiple"
                                style="width: 250px;">
                                @if (Model.AllCategories != null)
                                {
                                    @foreach (var category in Model.AllCategories)
                                    {
                                        <!option value="@category.Id" @(Model.SelectedCategoryIds != null &&
                                    Model.SelectedCategoryIds.Contains(category.Id) ? "selected" : "")>@category.Name
                                        </!option>
                                    }
                                }
                                else
                                {
                                    <!option disabled>Không có thể loại nào</!option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-3 col-12">
                        <div class="single-filter">
                            <h3>NGHỆ SĨ</h3>
                            <select id="artist" class="js-example-basic-multiple-limit" multiple="multiple"
                                style="width: 250px;">
                                @if (Model.AllArtists != null && Model.AllArtists.Any())
                                {
                                    @foreach (var artist in Model.AllArtists)
                                    {
                                        <!option value="@artist.Id" @(Model.SelectedArtistIds.Contains(artist.Id) ? "selected" :
                                    "")>@artist.Name</!option>
                                    }
                                }
                                else
                                {
                                    <!option disabled>Không có nghệ sĩ nào</!option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-3 col-12">
                        <div class="single-filter">
                            <h3>ERA</h3>
                            <select id="era" class="js-example-basic-multiple-limit" multiple="multiple"
                                style="width: 250px;">
                                @foreach (var era in Model.AllEras)
                                {
                                    <!option value="@era" @(Model.SelectedEraIds.Contains(era) ? "selected" : "")>@era
                                    </!option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="col-lg-3 col-12">
                        <div class="single-filter">
                            <h3>TÂM TRẠNG</h3>
                            <select id="mood" class="js-example-basic-multiple-limit" multiple="multiple"
                                style="width: 250px;">
                                @if (Model.AllMoods != null && Model.AllMoods.Any())
                                {
                                    @foreach (var mood in Model.AllMoods)
                                    {
                                        <!option value="@mood.Id" @(Model.SelectedMoodIds.Contains(mood.Id) ? "selected" : "")>
                                            @mood.Name</!option>
                                    }
                                }
                                else
                                {
                                    <!option disabled>Không có tâm trạng nào</!option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Dropdown Filter -->
                <div class="filter-dropdown">
                    <div class="single-filter-dropdown">
                        <h4>SẮP XẾP BỞI: </h4>
                        <select class="filter-select">
                            <option value="1">THỨ TỰ MẶC ĐỊNH</option>
                        </select>
                    </div>
                    <div class="single-filter-dropdown">
                        <h4>HIỂN THỊ: </h4>
                        <select class="filter-select">
                            <option value="1">01 - 12</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <div class="product-container">
        @foreach (var product in Model.Products)
        {
            <div class="product">
                <a href="/Home/VinylDetails/@product.ProductId">
                    <img src="@product.ProductImage" alt="@product.ProductName">
                </a>
                <h2>@product.ProductName</h2>
                <p>@product.ArtistNames</p>
                <p class="price">@product.Price</p>
                <div class="buttons">
                    <span class="preorder">PREORDER</span>
                    <span class="size">M</span>
                </div>
            </div>
        }
    </div>

    <div class="container">
        <div class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <a href="@Url.Action("Vinyl", "Home", new { page = Model.CurrentPage - 1 })" class="page-btn"> &lt; </a>
            }

            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                if (i == Model.CurrentPage)
                {
                    <span class="page-btn active">@i</span>
                }
                else
                {
                    <a href="@Url.Action("Vinyl", "Home", new { page = i })" class="page-btn">@i</a>
                }
            }

            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a href="@Url.Action("Vinyl", "Home", new { page = Model.CurrentPage + 1 })" class="page-btn">&gt;</a>
            }
        </div>
    </div>
</main>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>

<script>
    // Khởi tạo select2 với giới hạn chọn tối đa
    $(".js-example-basic-multiple-limit").select2({
        maximumSelectionLength: 5
    });

    $('#category, #artist, #era, #mood').on('change', function () {
        var selectedCategories = $('#category').val() || [];
        var selectedArtists = $('#artist').val() || [];
        var selectedEras = $('#era').val() || [];
        var selectedMoods = $('#mood').val() || [];

        // Update the URL with the new selections
        var url = '@Url.Action("Vinyl", "Home")' +
            '?categoryIds=' + encodeURIComponent(selectedCategories.join(',')) +
            '&artistIds=' + encodeURIComponent(selectedArtists.join(',')) +
            '&selectedEras=' + encodeURIComponent(selectedEras.join(',')) +
            '&moodIds=' + encodeURIComponent(selectedMoods.join(','));

        // Navigate to the new URL
        window.location.href = url;
    });

    $('.js-example-basic-multiple-limit').on('change', function () {
        // Check if the user is trying to select a new option that cancels the previous selection
        if ($(this).val().length > 1) {
            $(this).val([]).trigger('change.select2'); // Clear all previous selections
        }
    });




</script>
