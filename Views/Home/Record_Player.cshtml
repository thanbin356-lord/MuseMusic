@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MuseMusic.Models.ViewModels.RecordPlayerViewModel
<main>
    <!-- Record player Header -->

    <section class="section-padding">

        <img class="record-img-top" src="/images/record-player-header.png">

    </section>

    <div class="container">
        <div class="row align-items-center">

            <div class="record-title">
                <h1>ĐẦU ĐĨA THAN THỊNH HÀNH</h1>

            </div>

        </div>
    </div>

    <!-- Trending Record Player -->
    <section class="section-padding">
        <div class="container">
            <div class="row justify-content-center">
                <!-- Single Trending Record Player-->
                <div class="trend-record">

                    <div class="col-lg-6 col-12">
                        <img class="trendrecord-img" src="/images/record-player/trend-record1.png">
                    </div>

                    <div class="col-lg-6 col-12">
                        <div class="trendrecord-info">
                            <h3>Columbia GP-3</h3>
                            <p>Đầu đĩa này phù hợp cho: <br> • Người trẻ <br>• Người già <br>• Người trẻ thích chơi đồ
                                của người già</p>
                        </div>
                        <div class="trend-button">
                            <a href="/Home/RecordPlayer_Details/6" class="btn">XEM CHI TIẾT</a>
                            
                        </div>
                    </div>

                </div>

                <!-- Single Trending Record Player-->
                <div class="trend-record">

                    <div class="col-lg-6 col-12" style="text-align: right;">
                        <div class="trendrecord-info">
                            <h3>Audio Technica AT-LP60x</h3>
                            <p>Đầu đĩa này dành cho người: <br> • Nghe nhạc quá 180p/ngày <br>• Thích màu xe của Người
                                Dơi<br>• Cần tìm quà tặng bố vợ/chồng</p>
                            <div class="trend-button">
                                <a href="/Home/RecordPlayer_Details/6" class="btn">XEM CHI TIẾT</a>
                                
                            </div>
                        </div>

                    </div>

                    <div class="col-lg-6 col-12">
                        <img class="trendrecord-img" src="/images/record-player/trend-record2.png">

                    </div>

                </div>

            </div>
    </section>

    <div class="container">
        <div class="row">

            <div class="record-title">
                <h1>XEM THÊM CÁC ĐẦU ĐĨA KHÁC:</h1>

            </div>

        </div>
    </div>

    <!--  Record Player List -->

    <div class="record-container">

        @foreach (var product in Model.Products)
        {
            <div class="record-player">

                <a href="/Home/RecordPlayer_Details/@product.ProductId"><img src="@product.ProductImage"
                        alt="@product.ProductName"></a>
                <h2>@product.ProductName</h2>
                <p>@product.ArtistNames</p>
                <p class="price">@product.Price</p>
                <div class="buttons">
                    <span class="preorder">PREORDER</span>
                </div>
            </div>

        }

    </div>

    <div class="container">
        <div class="pagination">
            @if (Model.CurrentPage > 1)
            {
                <a href="@Url.Action("RecordPlayer", "RecordPlayerView", new { page = Model.CurrentPage - 1 })"
                    class="page-btn">&lt;</a>
            }

            @for (int i = 1; i <= Math.Ceiling((double)Model.TotalProducts / 12); i++)
            {
                if (i == Model.CurrentPage)
                {
                    <span class="page-btn active">@i</span>
                }
                else
                {
                    <a href="@Url.Action("RecordPlayer", "RecordPlayerView", new { page = i })" class="page-btn">@i</a>
                }
            }

            @if (Model.CurrentPage < Math.Ceiling((double)Model.TotalProducts / 12))
            {
                <a href="@Url.Action("RecordPlayer", "RecordPlayerView", new { page = Model.CurrentPage + 1 })"
                    class="page-btn">&gt;</a>
            }
        </div>
    </div>

</main>